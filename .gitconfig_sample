#customize your
#   user.name
#   user.email
#   alias.mynikname
[user]
  name = your_name
  email = your@mail
[alias]
  mynikname = "! f() {          \
    nikname='yournik'            \
    ;echo $nikname              \
  ;}; f"

  myname = "! echo $(git config user.name | tr -d '\n')"
  myallname = "! echo $(git mynikname)'|'$(git myname)"

#Check labels in sources. Useful look for nikname, f.e. in comments 
  mycheck = "! f() {                  \
    allname=$(git mynik);             \
    echo Find nikname in sources $allname;                    \
    git grep -nEe \"${allname}\"      \
  ;}; f "

##### Main commands 
  br = branch
  co = checkout
  ci = commit
  amend = commit --amend -C HEAD
  st = status
  rb = rebase
  rbi = rebase -i
  ch = cherry-pick
  type = cat-file -t
  dump = cat-file -p
  unstage = ! git reset HEAD -- $@ 
  sshow = show --stat --pretty=format:\"%C(green)%h %C(yellow)%ad%C(cyan)%d%Creset | %s %C(black bold)[%an]%Creset \" --graph --date=short --decorate --no-notes
  last  = log         --pretty=format:\"%C(green)%h %C(yellow)%ad%C(cyan)%d%Creset | %s %C(black bold)[%an]%Creset \" --graph --date=short --decorate -20
  hist  = log         --pretty=format:\"%C(green)%h %C(yellow)%ad%C(cyan)%d%Creset | %s %C(black bold)[%an]%Creset \" --graph --date=short --decorate
  visual = !gitk --all &
  df = diff
  df0 = diff -U0
  dfc = diff --cached

  #Show log for current user sorted by date
  mylogsort = "! f() { \
    git mylog $@ | sort --key=3,3 -r \
  ;}; f $@"

  #Show log for current user without sorte
  mylog = "! f() { \
    allname=$(git myallname); \
    name=$(git myname); \
    nik=$(git mynikname); \
    echo Log of user \"'$allname'\" sorted by date; \
    git hist2 $@ | grep -i -E \"${allname}\" | sed \"s/\\[${name}\\]//i\" | sed \"s/\\[${nik}\\]//i\" \
  ;}; f $@"

##### Useful commands 
  hist2 = log         --pretty=format:\"%C(green)%h %C(yellow)%ad%Creset           | %s %C(black bold)[%an]%Creset \" --graph --date=short --decorate
  lg    = log -p
  lol   = log --graph --decorate --pretty=oneline --abbrev-commit
  lola  = log --graph --decorate --pretty=oneline --abbrev-commit --all

  # ignored
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
  # to see the list of the ignored files.
  ignored = !git ls-files -v | grep ^[a-z]

  # temporarily ignoring file
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged

  # check merged
  merged = branch --merged
  unmerged = branch --no-merged

  # see gitignore: git gi list
  gi = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
  ls = ls-files

##### Services commands
fsckclear = "! f(){ \
    echo \"= git fsck\"                                             && git fsck \
    && echo \"= git reflog expire --expire-unreachable=now --all\"  && git reflog expire --expire-unreachable=now --all \
    && echo \"= git gc --prune prunefsck\"                          && git gc --prune=now \
    && echo \"= git fsck\"                                          && git fsck ;}; f"

#######################
##### my worlflow #####
#######################

# Сделать временный бекап текущей ветки в репу $dst (origin).
# Конечная ветка: не меняется.
copy2tmp = "! f(){ \
 user=$(git mynikname) \
 && dst=${1:-origin} \
 && cbr=$(git rev-parse --abbrev-ref HEAD) \
 && rbranch=_${user}_${cbr}_tmp \
 && CURDATE=$(date +"%y%m%d_%H%M%S") \
 && MESS=$(echo -n \"Tmp commit of branch '${cbr}'. Date: ${CURDATE}.\") \
 && echo \
 && echo \"=   copy2tmp $dst\" \
 && echo \"==  copy2tmp 1:\ngit add --all\"                  && git add --all \
 && echo \"==  copy2tmp 2:\ngit ci -am '$MESS'\"             && git ci -m \"${MESS}\" \
 && echo \"==  copy2tmp 3:\ngit push -f $dst $cbr:$rbranch\" && git push -f $dst $cbr:$rbranch \
 && echo \"==  copy2tmp 4:\ngit reset HEAD~1\"               && git reset HEAD~1 \
 && echo && echo 'Please check!!!' && git last \
 ;}; f"

# Сделать копию $cfg в репу $dst (origin).
# Конечная ветка: не меняется.
backupcfg = "! f(){ \
 user=$(git mynikname) \
 && cfg=${1:-cfg} \
 && dst=${2:-origin} \
 && rbranch=_${user}_${cfg}_backup \
 && echo \
 && echo \"=   backupcfg $cfg $dst\" \
 && echo \"==  backupcfg 1:\ngit push -f $dst $cfg:$rbranch\" && git push -f $dst $cfg:$rbranch \
 ;}; f"

# Переребейзить $cfg и $fix, Т.е. подготовить ветки к 3-х веточной схемы работы.
# Конечная ветка: $fix.
lupdate = "! f(){ \
 fix=${1:-fix} \
 && cfg=${2:-cfg} \
 && master=${3:-master} \
 && echo \
 && echo \"=  lupdate $fix $cfg $master\" \
 && echo \"== lupdate 1:\ngit co $master\"      && git co $master  \
 && echo \"== lupdate 2:\ngit rb $master $cfg\" && git rb $master $cfg \
 && echo \"== lupdate 3:\ngit rb $cfg $fix\"    && git rb $cfg $fix \
 ;}; f"

# Обновить $master из удаленной ветки $src_branch ($master) репы $src (origin).
# Применить изменения к $cfg и $fix.
# Конечная ветка: $fix.
update = "! f(){ \
 fix=${1:-fix} \
 && cfg=${2:-cfg} \
 && master=${3:-master} \
 && src=${4:-origin} \
 && src_branch=${5:-$master} \
 && echo \
 && echo \"=  update $fix $cfg $master $src $src_branch\" \
 && echo \"== update 1:\ngit fetch $src $src_branch\"      && git fetch $src $src_branch \
 && echo \"== update 2:\ngit co $src_branch\"              && git co $src_branch \
 && echo \"== update 3:\ngit merge --ff-only $src_branch\" && git merge --ff-only $src_branch \
 && echo \"== update 3:\ngit co $master\"                  && git co $master \
 && echo \"== update 4:\ngit merge $src_branch\"           && git merge $src_branch \
 && echo \"== update 5:\ngit lupdate $fix $cfg $master\"   && git lupdate $fix $cfg $master \
 ;}; f"

# Загрузить свои изменения из ветки $fix в ветку $master, исключая коммиты ветки $cfg.
# Конечная ветка: $fix.
applyfix = "! f(){ \
 fix=${1:-fix} \
 && cfg=${2:-cfg} \
 && master=${3:-master} \
 && echo \
 && echo \"=  applyfix $fix $cfg $master\" \
 && echo \"== applyfix 1:\ngit co $fix\"                      && git co $fix \
 && echo \"== applyfix 2:\ngit rb --onto $master $cfg $fix\"  && git rb --onto $master $cfg $fix  \
 && echo \"== applyfix 3:\ngit co $master\"                   && git co $master \
 && echo \"== applyfix 4:\ngit rb $fix $master\"              && git rb $fix $master \
 && echo \"== applyfix 5:\ngit rb $master $cfg\"              && git rb $master $cfg \
 && echo \"== applyfix 6:\ngit rb $cfg $fix\"                 && git rb $cfg $fix \
 ;}; f"

# Обновить $master из удаленной ветки $src_branch ($master) репы $src (origin).
# Залить изменения из $fix в $master. 
# Отправить $master в ветку $dst_branch ($src_branch) репы $dst ($src). 
# Сделать бекап $cfg.
# Конечная ветка: $fix.
upload = "! f(){ \
 fix=${1:-fix} \
 && cfg=${2:-cfg} \
 && master=${3:-master} \
 && src=${4:-origin} \
 && src_branch=${5:-$master} \
 && dst=${6:-$src} \
 && dst_branch=${7:-$src_branch} \
 && echo \
 && echo \"=  upload $fix $cfg $master $src $src_branch $dst $dst_branch\" \
 && echo \"== upload 1:\ngit update $fix $cfg $master $src $src_branch\"  && git update $fix $cfg $master $src $src_branch \
 && echo \"== upload 2:\ngit sendfix $fix $cfg $master $dst $dst_branch\" && git sendfix $fix $cfg $master $dst $dst_branch \
 && echo && echo 'Please check!!!' && git last \
 ;}; f"

# Залить изменения из $fix в master. 
# Отправить $master в ветку $dst_branch ($src_branch) репы $dst ($src). 
# Сделать бекап $cfg.
# Конечная ветка: $fix.
sendfix = "! f(){ \
 fix=${1:-fix} \
 && cfg=${2:-cfg} \
 && master=${3:-master} \
 && dst=${4:-origin} \
 && dst_branch=${5:-$src_branch} \
 && echo \
 && echo \"=  sendfix $fix $cfg $master $src $src_branch $dst $dst_branch\" \
 && echo \"== sendfix 1:\ngit load $fix $cfg $master\"                    && git applyfix $fix $cfg $master \
 && echo \"== sendfix 2:\ngit push $dst $master:$dst_branch\"             && git push $dst $master:$dst_branch \
 && echo \"== sendfix 3:\ngit backupcfg $cfg $dst\"                       && git backupcfg $cfg $dst \
 ;}; f"

##########################
### git-svn useful
##########################

pushall      = ! echo "=  pushall"         && git push --all origin
pushallforce = ! echo "=  pushallforce"    && git push --all --force origin


svnlog = !git svn log --oneline -20 | sort
svndcommit   = ! echo "=  git svn dcommit" && git svn dcommit

uploadsvn = "! f(){ \
 fix=${1:-fix} && cfg=${2:-cfg} && master=${3:-master} \
 && echo "=  uploadsvn $fix $cfg $master " \
 && git pushallforce \
 && git updatesvn $fix $cfg $master \
 && git loadsvn $fix $cfg $master \
 && git svndcommit \
 && git updatesvn $fix $cfg $master  \
 && git pushallforce \
 && echo "=====" && git last \
 && echo "=====" && git svnlog ;}; f"

updatesvn = "! f(){ \
 fix=${1:-fix} && cfg=${2:-cfg} && master=${3:-master} \
 && echo "=  updatesvn ${fix} ${cfg} ${master} " \
 && echo "== git co $master"       && git co $master  \
 && echo "== git svn rebase"       && git svn rebase \
 && echo "== git rb $master $cfg"  && git rb $master $cfg \
 && echo "== git rb $cfg $fix"     && git rb $cfg $fix ;}; f"

loadsvn = "! f(){ \
 fix=${1:-fix} && cfg=${2:-cfg} && master=${3:-master} \
 && echo "=  loadsvn $fix $cfg $master " \
 && echo "== git co $fix"                      && git co $fix \
 && echo "== git rb --onto $master $cfg $fix"  && git rb --onto $master $cfg $fix  \
 && echo "== git co $master"                   && git co $master \
 && echo "== git rebase $fix $master"          && git rebase $fix $master ;}; f"

